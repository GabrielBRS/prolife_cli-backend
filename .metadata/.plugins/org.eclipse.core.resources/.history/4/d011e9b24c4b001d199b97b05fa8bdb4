package com.gabrielsousa.prolife.domain;

import java.io.Serializable;
import java.util.Objects;

import javax.persistence.Entity;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;

@Entity
//@Table(name="MY_HOSPITAL_TABLE")
public class Hospital extends Users implements Serializable{
	private static final long serialVersionUID = 1L;
	
	private String name;
	
	private String cnpj;
	
	@ManyToOne
	@JoinColumn(name="organization_id")
	private Organization organization;
	
	public Hospital() {
		
	}

	public Hospital(Integer id, String email, String password, String name, String cnpj) {
		super(id, email, password);
		this.name = name;
		this.cnpj = cnpj;
	}



	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	@Override
	public String toString() {
		return "Hospital [id=" + id + ", name=" + name + "]";
	}

	@Override
	public int hashCode() {
		return Objects.hash(id, name);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Hospital other = (Hospital) obj;
		return Objects.equals(id, other.id) && Objects.equals(name, other.name);
	}
	
}
